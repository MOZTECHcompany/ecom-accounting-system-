# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ecommerce_accounting?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Seeded Super Admin Account (set before running prisma db seed)
SUPER_ADMIN_EMAIL="admin@example.com"
SUPER_ADMIN_PASSWORD="ChangeMeToAStrongSecret"
SUPER_ADMIN_NAME="系統管理員"

# Server Configuration
PORT=3000
NODE_ENV="development"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# API Configuration
API_PREFIX="/api/v1"

# Swagger Configuration
SWAGGER_ENABLED=true

# Timezone
TZ="Asia/Taipei"
